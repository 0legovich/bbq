<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '',
                      class: 'event-background',
                      style: "background-image: url(#{asset_path('event.jpg')})" %>
      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= l(@event.datetime, format: :long) %></h3>
            <h3>
              <smal><%= link_to @event.adress, "https://yandex.ru/maps/?text=#{@event.adress}" %></smal>
            </h3>
            <p><%= @event.description %></p>
          </div>

          <% if current_user_can_edit?(@event) %>
              <div class="buffer-top">
                <%= link_to 'Изменить', edit_event_path(@event), class: 'buffer-bottom btn btn-primary' %>
                <%= link_to 'Удалить', @event,     method: :delete, class: 'buffer-bottom btn btn-danger' %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>